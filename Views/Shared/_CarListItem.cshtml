@model AmiFlota.Models.CarModel

@{
    var photoPath = "/images/cars/" + (Model.PhotoPath ?? "default.jpg");
}


<div class="card border-0 mx-0 px-0">
    <div class="row g-0">
        <div class="col-4 mx-0 my-2 p-0">
            <img src="@photoPath" class="img-fluid justify-content-center rounded-2 img-heigt-width" alt="Unable to load car photo">
        </div>
        <div class="col-8">
            <div class="card-body">
                <h5 class="card-title text-center text-uppercase">@Model.Brand @Model.Model @Model.RegistrationNumber</h5>
                    <div class="row mx-0 px-0">
                            <div class="col-6 my-2 p-0">
                                <p>Card PIN: @Model.CardPin</p>
                                <p>Insurance: @Model.Insurance.Date.ToString("dd/MM/yyyy")</p>
                                <p>Technical Review: @Model.TechnicalReview.Date.ToString("dd/MM/yyyy")</p>
                                <p>Fuel: @Model.Fuel</p>
                                <p>Tyres: @Model.TyreSize</p>
                            </div>
                            <div class="col-6 mx-0 my-2 p-0">
                                <p>Trunk: @Model.Trunk</p>
                                <p>Seats: @Model.SeatsNumber</p>
                                <p>Doors: @Model.Doors</p>
                                <p>Engine: @Model.Engine</p>
                                <p>Horse Power [KM]: @Model.HorsePower</p>
                            </div>
                    </div>
            </div>
        </div>
    </div>
</div>
